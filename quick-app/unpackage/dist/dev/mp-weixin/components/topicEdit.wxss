.topic-edit {
  margin-bottom: 16rpx;
  background-color: #fff;
  position: relative;
  border-radius: 0;
  box-shadow: 0 2rpx 4rpx 0 rgba(0, 0, 0, 0.05);
}
.topic-edit-body {
  padding: 10rpx 10rpx;
  background: #fff;
  position: relative;
  border-radius: 4rpx;
}
.edit-bottom {
  padding: 10rpx 10rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: -4rpx;
}
.edit-toolbar {
  display: flex;
  color: #027fff;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.tool {
  display: flex;
  align-content: center;
}
.submit {
  display: flex;
}
.submit-button {
  opacity: 0.2;
  cursor: not-allowed;
  padding: 0 !important;
  background-color: #027fff;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 30rpx;
  width: 120rpx;
}
.active {
  opacity: 2;
}
button {
  -webkit-appearance: none;
  appearance: none;
  background-color: #027fff;
  color: #fff;
  border-radius: 4rpx;
  border: none;
  padding: 5rpx 10rpx;
  outline: none;
  transition: background-color 0.3s, color 0.3s;
  cursor: pointer;
}
.topic-edit-content {
  position: relative;
  border-radius: 4rpx;
  border: 2rpx solid rgba(150, 150, 150, 0.2);
  background-color: rgba(226, 230, 235, 0.2);
}
.edit {
  position: relative;
  word-wrap: break-word;
  resize: none;
  height: 100rpx;
  padding: 10rpx 10rpx;
}
.word-counter {
  position: absolute;
  right: 4rpx;
  bottom: 6rpx;
  font-size: 26rpx;
  z-index: 1;
  -webkit-user-select: none;
  user-select: none;
  pointer-events: none;
  color: #a1a9b3;
}

